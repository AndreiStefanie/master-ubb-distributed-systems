{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowJs": true,
    "importHelpers": false
  },
  "include": ["./package.json", "./package-lock.json", "src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
